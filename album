  <script>
    const btn = document.getElementById('play');
    const audio = document.getElementById('music');

    btn.onclick = async () => {
      try {
        await audio.play();
        btn.style.display = 'none';
      } catch(e) {
        alert('Gagal memutar musik. Pastikan file musik ada di repository.');
      }
    }
  </script>

